/**app.wxss**/
@import 'weui.wxss';

/* weui */

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/* weui---end */








.container {
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
} 
view{
  box-sizing: border-box;
}
/* 注册登录 */
.login{
  width: 100%;
  padding: 10rpx;
}
.login .loginInput{
  width: 80%;
  margin: 100rpx auto 0;
}
.login .loginInput .user input{
  border: 1rpx solid #ccc;
  height: 80rpx;
  padding: 0 20rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  line-height: 80rpx; 
}

.login button{
  margin-top:40rpx;
  background-color: #18c9ff;
  color: #fff;
}
.login .register{
  margin-top: 40rpx;
  font-size: 24rpx;
  text-align: center;
}
.login .register .toReg{
  display: inline-block;
  color: #18c9ff;
}

