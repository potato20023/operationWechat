/* 登录,注册 */
/* 表单 */
.form{
  width: 90%;
  height: 100%;
  margin: 0 auto;
}
.form .user{
  display: flex;
  justify-content: left;
  border-bottom: 1rpx solid #c5c5c5;
  margin-top: 40rpx;
}
.form .user image{
  width: 60rpx;
  height: 60rpx;
  /* margin-right: 40rpx; */
}
.form .user input{
  padding-left: 30rpx;
}
.form .search image{
  position: relative;
  left: 55rpx;
} 
.form .register{
  text-align: right;
  padding:20rpx 40rpx 0 0;
  color: #1898FF;
}
.form .submit{
  top: 60rpx;
  position: relative;
}
.form .submit button{
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 0rpx;
  opacity: 0;
  z-index: 1000;
}
.form .submit image{
  width: 100%;
  height: 80rpx;
}

.bg{
  width: 100%;
  height: 380rpx;
  position: fixed;
  bottom: 0;
}
.bg image{
  width: 100%;
  height: 100%;
}