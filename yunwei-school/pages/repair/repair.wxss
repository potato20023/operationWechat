/* pages/repair/repair.wxss */
/* 报修信息 */
.container{
  background-color:#EBECF5;
  padding: 20rpx;
  color: #666;
  margin-bottom: 100rpx;
}
/* 设备名称 */
.container .label view{
  display: inline-block;
}
.container .con{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.container .con .type{
  display: flex;
  justify-content: space-between;
}
.container .con .type>view{
  width: 50%;
}
.container .con .type .type_name{
  text-align: right;
  position: relative;
}
.container .con .type .type_name input{
  border: 1rpx solid #edecf5;
  background-color: #fcfcfc;
  padding-right: 45rpx;
  border-radius: 5rpx;
}
.container .con .type .type_name image{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}
/* 设备名称列表 */
 .container .con .type .type_name .type_list{
  width: 100%;
  position: absolute; 
  top: 45rpx;
  right: 0rpx;
  border: 1rpx solid #edecf5;
  border-top: 0;
  background-color: #fcfcfc;
  border-radius: 0 0 5rpx 5rpx;
  padding: 10rpx 30rpx 0 0;
  z-index: 100;
  box-sizing:border-box;

}
.container .con .type .type_name .type_list .item{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fcfcfc;
}


/* 故障描述 */

.container .con .describe{
  margin-top: 30rpx;
}
.container .con .describe .desc_con{
  margin-top: 10rpx;
  background-color: #f1f4fb;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}
.container .con .describe .desc_con .remark{
  display: block;
  width: 100%;
  height: 350rpx;
}


/* 故障标签 */
.container .con .fault_label{
  /* display: flex;
  flex-wrap: wrap; */
  display: inline-block;
}
.container .con .fault_label .fault{
  
  /* background-color: #EBECF5; */
  border-radius: 5rpx;
  /* color: #999; */
  padding:10rpx;
  margin-left: 0;
  margin: 10rpx;
  font-size: 22rpx;
}


/* 添加照片 */
.container .img,.container .img img_list{
  display: flex;
  flex-wrap: wrap;
}
.container .img .add,.container .img .img_list image{
  width: 160rpx;
  height: 160rpx;
  margin: 6rpx 12rpx;
  margin-left:0;
}
.container .img .add{
  background-color: #fff;
  padding: 15rpx;
}
.container .img .add image{
  width: 130rpx;
  height: 130rpx;  
}

/* 报修按钮 */
.container .btn{
   width: 80%;
   box-sizing: border-box;
  position: fixed;
  bottom: 30rpx;
  left: 10%;
}
.container .btn button{
  /* width: 100%; */
  color: #fff;
  background-color: #18c9ff;
}

