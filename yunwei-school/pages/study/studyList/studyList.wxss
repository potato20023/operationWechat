/* pages/study/studyList/studyList.wxss */
page{
  height:100%;
}
.container{
  padding: 30rpx 0;
}
.container .list{
  width:100%;
  margin-bottom: 40rpx;
}
.container .list .list_title{
  font-weight: 800;
  border-top: 2rpx solid #f1f1f1;
  border-bottom: 2rpx solid #f1f1f1;
  font-size: 32rpx;
  padding: 0 30rpx;
  width: 100%;
  height:80rpx;
  background-color: #fff;
  line-height:80rpx;
}
.container .list .item{
  padding: 0 30rpx;
  width: 100%;
  height:80rpx;
  font-size: 28rpx;
  background-color: #fff;
  line-height:80rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1; 
}
.container .list .item .label{
  font-weight: 400;
  display: inline-block;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .list .item .down{
  color:#18c9ff;
  font-size: 24rpx;
  line-height: 80rpx;
  width: 70rpx;
  height:80rpx;
  text-align: center;
  letter-spacing: 4rpx;
}