/* 公共样式 -- start */
.container .label view{
  display: inline-block;
}
.container .label image{
  width: 40rpx;
  height:35rpx;
  margin-right: 10rpx;
  position: relative;
  top: 4rpx;
}
.container .con{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 公共样式 -- end */

/* 设备详情 -- start */
.container .details{
  width: 100%;
}
.container .details .detail{
  width: 100%;
  height: 100rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.container .details .more{
  text-align: center;
  color: #b5b8c1;
  font-size: 24rpx;
}

/* 设备详情 -- end */

/* 故障描述 --start */

.container .con .describe{
  margin-top: 30rpx;
}
.container .con .describe .desc_con{
  margin-top: 10rpx;
  /* background-color: #f1f4fb; */
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}
/* 故障描述 --end */

/* 报修图片 -- start */
.container .img{
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  justify-content: left;
}
.container .img image{
  width: 30%;
  height:220rpx;
  /* float: left; */
  margin: 0 11rpx;
  border-radius: 6rpx;
}
/* 报修图片 -- end */

