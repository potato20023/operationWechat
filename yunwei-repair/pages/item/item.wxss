/* pages/item/item.wxss */
.main{
  width: 100%;

}
.main .header{
  margin-bottom:40rpx; 
  padding: 12px 15px;
  background-color: #fff;
  position: relative;
  overflow: hidden
}
.main .header .left{
  float: left;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden
}
.main .header .left image{
  display: block;
  width: 100%;
  height: 100%;
}
.main .header .right{
  padding-left: 40rpx;
  float: left;
  line-height: 55rpx;
  font-size: 14px;
}
.main .imgList{
  display: flex;
  background-color: #fff;
  /* padding-bottom: 20rpx; */
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.main .imgList image{
  width:200rpx;
  height:200rpx;
  display:inline-block;
  margin-left:15rpx;
  border-radius: 5rpx;
}
.main .steps{
  background-color: #fff;
}
.main-steps{
  padding-bottom: 16rpx !important;
}
/* pages/end/end.wxss */
.item-radio-group{
  background: #fff;
  display: block;
}
.item-radio-group .item-radio{
  display: inline-block
}
.upload{
  background: #fff;
  padding: 20rpx 40rpx;
  overflow: hidden;
}
.upload-icon {
  background: #fff;
  padding:40rpx;
  border: 1rpx dashed #ddd;
  float: left;

}
.img-item{
  width: 140rpx;
  height: 140rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
}
.img-item image{
  display: block;
  width: 100%;
  height: 100%;
}



/* 拨打电话 */
.reInfo{
  width: 100%;
  position: relative;
}
.phone{
  position:absolute;
  bottom: 0;
  right: 0;
  width: 70%;
  height: 100rpx;
  z-index: 100;
}

/* 评价 -- start */
.evaluate{
  background-color:#fff;
  padding: 30rpx;
}
.evaluate .title{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.evaluate .title image{
  width: 50rpx;
  height:50rpx;
  position: relative;
  top: 15rpx;
}
.evaluate .eval{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: space-between;
  color:#666;
  line-height: 40rpx;
  padding: 30rpx 0;
}
.evaluate .text{
  width: 100%;
  /* margin: 30rpx; */
  background-color: #f2f4fc;
  padding: 20rpx;
}


/* 评价 -- end */