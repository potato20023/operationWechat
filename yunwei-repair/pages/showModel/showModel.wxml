<!--pages/showModel/showModel.wxml-->
<view class='showModel'>
  <view class='model'>
    <image src='/assets/img/showModel_bg.png' class='bg'></image>
    <view class='con'>
      <view class='title'>您有新的任务,快去处理吧!</view>
      <view class='choose'>
        <view class='after item' bindtap='back'>
          <image src='/assets/img/showModel_1.png' class='choose_bg'></image>
          <text>稍后处理</text>
        </view>
        <view class='see item' bindtap='toDetail'>
          <image src='/assets/img/showModel_2.png' class='choose_bg'></image>
          <text>查看详情</text>
        </view>
      </view>
    </view>
    
  </view>
</view>
